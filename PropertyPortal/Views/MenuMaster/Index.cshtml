@model IEnumerable<PropertyPortal.tblmenu>
@using GridMvc.Html

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container">
    <div class="row">

       
        <div class="col-xs-12">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Menu Details</h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            @Html.ActionLink("Create New", "Create")
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    @Html.Grid(Model).Columns(columns =>
           {
                 columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(d => @<b> @Html.ActionLink("Edit", "Edit", new { id = d.ID })      </b>);
                 columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(d => @<b> @Html.ActionLink("Details", "Details", new { id = d.ID })      </b>);
                 columns.Add(foo => foo.MenuName).Titled("Name").SetWidth(200);
                 columns.Add(foo => foo.MenuLink).Titled("Link");
                 columns.Add(foo => foo.MenuOrder).Titled("Order");
                 columns.Add(foo => foo.ParentID).Titled("Parent");
           }).WithPaging(20)

                </div>
            </div>

        </div>
    </div>
</div>


