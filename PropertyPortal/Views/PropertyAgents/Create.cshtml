@model PropertyPortal.tblpropagent

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "PropertyAgents", FormMethod.Post, new { enctype = "multipart/form-data" }))
    @Html.ValidationSummary(true)

